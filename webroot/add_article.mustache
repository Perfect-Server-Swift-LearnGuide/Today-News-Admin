
<!-- 右侧添加文章样式 -->
{{> add_style}}

<div id='add_article'>
	<h1>添加文章</h1>

	<form id='add_article_form'>
		<div id='article_title'>
			<span>文章标题: </span>
			<input type="text" name="title" placeholder="请输入文章标题"></input>
		</div>
		<div id='article_content'>
			<span>文章内容: </span>
			<textarea name="content" rows="6" cols="20" placeholder='请输入文章内容'></textarea>
		</div>
		<div id='submit'>
			<p id='submit_btn'>提交<p>
		</div>
	</form>
<div>

<script>

$(function(){
	$('#submit_btn').on('click', function(){

		var data = $('#add_article_form').serialize()
		
		$.ajax( {  
			url:'/add_article_action',
			data:data,  
			type:'get',  
			dataType:'json',  
			success:function(data) {
				if (data.result == 'success') {
					alert('添加成功')
				} else {
					alert('添加失败')
				}
			},  
			error:function() {  
				alert("异常！");  
			}  
		});
	})
})
</script>